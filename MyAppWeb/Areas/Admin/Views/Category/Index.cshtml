@model MyApp.Models.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<h1>List of Categories</h1>


<div class="row p-4">
    <div class="col-6"></div>
    <div class="col-6">
        <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category">Create</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var items in Model.categories)
        {
            <tr>
                <td>
                    @items.Name
                </td>
                <td>
                    @items.DisplayOrder
                </td>
                <td>
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@items.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@items.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
